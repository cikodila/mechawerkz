<div class="tform">
  <table width=100% >
	
	<tr>
		<th colspan = 2><%= t 'cofile.file_details' %></th>
	</tr>
	
	<!--26Feb2013-international numbering added-->
	<tr>
		<td class="leftcol"><label for="cofileno"><b><%= t 'cofile.international_code' %> :</b></label></td>
		<td><%=h @cofile.cofile_code %></td>
	</tr>
	<!--26Feb2013-international numbering added-->
	
	<tr>
		<td class="leftcol"><label for="cofileno"><b><%= t 'cofile.cofileno' %> :</b></label></td>
		<td><%=h @cofile.cofileno %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="name"><b><%= t 'cofile.name' %> :</b></label></td>
		<td>  <%=h @cofile.name %></td>
	</tr>
	<!--19feb2013-->
	<tr>
		<td class="leftcol"><label for="company"><b><%= t 'cofile.company' %> :</b></label></td>
		<td><%=h Addbook.find(@cofile.company).name %></td>
	</tr>
	<!--19Feb2013-->	
	<tr>
		<td class="leftcol"><label for="location"><b><%= t 'cofile.location' %> :</b></label></td>
		<td>  
			<!--19Feb2013-view location using coded list-->
			<%=h (Cofile::LOCATION.find_all{|disp, value| value == @cofile.location.to_i}).map {|disp, value| disp} %> 			<%#=h @cofile.location %>
			<!--19Feb2013-view location using coded list-->
		</td>
	</tr>
	<!--19Feb2013-->
	<tr>
		<td class="leftcol"><label for="division"><b><%= t 'cofile.division' %> :</b></label></td>
		<td>  
			<!--19Feb2013-view division using coded list-->
			<%=h (Cofile::DIVISION.find_all{|disp, value| value == @cofile.division.to_i}).map {|disp, value| disp} %> 			
			<!--19Feb2013-view division using coded list-->
		</td>
	</tr>
	<!--19Feb2013-->		
	<tr>
		<td class="leftcol"><label for="owner_id"><b><%= t 'cofile.owner' %> :</b></label></td>
	<td><%=h @cofile.owner_details %></td>
	</tr>
	<!--19Feb2013-->
	<tr>
		<td class="leftcol"><label for="remark"><b><%= t 'cofile.remark' %> :</b></label></td>
	<td><%=h @cofile.remark %></td>
	</tr>
	<!--19Feb2013-->
	<tr>
		<td class="leftcol"><label for="onloan"><b><%= t 'cofile.onloan' %> :</b></label></td>
		<td><%=h @cofile.onloan? ? "Yes" : "No"  %></td>
	</tr>
	<% if @cofile.onloan == true %>
	<tr>
		<td class="leftcol"><label for="staffloan_id"><b><%= t 'cofile.onloan_to' %> :</b></label></td>

	<td><%=h @cofile.staffloan_id? ? @cofile.borrower_details : "" %></td>
	</tr>
	<tr>
		<td class="leftcol"><label for="onloandt"><b><%= t 'cofile.onloandt' %> :</b></label></td>
		<td><%=h l(@cofile.onloandt) unless @cofile.onloandt.blank? %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="onloanxdt"><b><%= t 'cofile.onloanxdt' %> :</b></label></td>
		<td> <%=h l(@cofile.onloanxdt) unless @cofile.onloanxdt.blank?  %></td>
	</tr>
	<% end %>
	
</table>
<BR>
</div>


<%= link_to (t 'icms.update'), edit_cofile_path(@cofile) %> |
